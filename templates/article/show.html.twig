{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>記事</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>タイトル</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>内容</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>投稿日</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">戻る</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">編集する</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
